<header class="page-header">
	<div class="page-header__brand">
		<%- partial('_partial/brand') %>
	</div>
	<div class="page-header__navigation">
		<%- partial('_partial/navigation-site') %>
	</div>
</header>
<div class="article-header">
	<div class="article apply-typography">
		<div class="article-meta">
			<div class="article-meta__left">
				<% if(page.categories && page.categories.length > 0) { %>
				<div class="article-meta__category">
					<%- list_categories(page.categories, {
						show_count: false
					}) %>
				</div>
				<% } else { %>
				<div class="article-meta__category">
					Uncategorized
				</div>
				<% }%>

				<% if(page.readingTime) { %>
				<div class="article-meta__reading-time">
					<%- page.readingTime.text %>
				</div>
				<% } %>

			</div>
			<div class="article-meta__right">
				<% if(page.date) { %>
				<div class="article-meta__date">
					<%- page.date.format('MMMM Do YYYY') %>
				</div>
				<% } %>
			</div>
		</div>

		<div class="article-meta__authors">
			<% if(page.authors) { %>
				<ul>
					<li>
						<% if(page.authors.length === 1) { %>
							Author:
						<% } else { %>
							Authors:
						<% } %>
					</li>
					<% page.authors.forEach(function(author) { %>
						<li class="article-meta__author">
							<% if(author.twitter) { %>
								<a href="https://www.twitter.com/<%- author.twitter %>" target="_blank">
									<i class="icon icon--twitter">
										<svg viewBox="0 0 250 204" width="12" height="12" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
											<g id="twitter">
